@model IEnumerable<AdventureTx.Models.ProductCategory>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Adventure-Outdoor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                @{ foreach (var item in Model)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.DisplayFor(modelItem => item.Name)</a>
                            <ul class="dropdown-menu-left">
                                @{
                                    foreach (var item0 in item.ProductSubcategories)
                                    {

                                        <li>@Html.DisplayFor(y => item0.Name)</li>
                                    }
                                }
                            </ul>
                        </li>
                                    }
                }


                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
</div>