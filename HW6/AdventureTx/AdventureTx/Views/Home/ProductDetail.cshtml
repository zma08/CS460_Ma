@model AdventureTx.Models.ProductViewMovel

@{
    ViewBag.Title = "ProductDetail";
}

<h2>ProductDetail</h2>

<div>

    <hr />
    <input hidden id="pId" type="text" value="@Model.productId">
    <dl class="dl-horizontal">
        <dt>
            Product Photo
        </dt>
        <dd>
            <img src="@Model.photoString" />
        </dd>
        
        <br>
        <d1 class="dl-horizontal">      
            <dt>
                @Html.DisplayNameFor(model => model.productDescription.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.productDescription.Description)

            </dd>
        </d1>
    </dl>
</div>
<br />
<div class="container">

    @Html.ActionLink("WriteReview", "WriteReview", new { id = Model.productId }, new { @class = "btn btn-success" })
