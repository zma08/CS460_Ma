@model IEnumerable<AdventureTx.Models.ProductCategory>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Adventure-Outdoor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                @{ foreach (var item in Model)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.DisplayFor(modelItem => item.Name)</a>
                            <ul class="dropdown-menu">
                                @{
                                    foreach (var item0 in item.ProductSubcategories)
                                    {

                                        <li>@Html.ActionLink(item0.Name,"ListItem",new { id = item0.ProductSubcategoryID}) </li>
                                    }
                                }
                            </ul>
                        </li>
                      }
                }


                <li>@using (Html.BeginForm()) {<input type="text" name="search" id="val"/><input type="submit" value="search Name"  id="searchStr"/>}</li >
                
            </ul>
        </div>
    </div>
</div>
<div id="bg">
<img src="~/Content/outdoor.jpg">
</div>
@section MyScripts{
    <script src="~/Scripts/MyScripts.js"></script>
    }